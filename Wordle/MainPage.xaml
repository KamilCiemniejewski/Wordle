<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wordle.MainPage">

    <StackLayout Padding = "20" Spacing = "10" VerticalOptions = "Center">
        <Label Text = "Welcome to Wordle game!" FontSize = "25" HorizontalOptions = "Center"/>

        <StackLayout Orientation = "Horizontal" HorizontalOptions = "Center">
            <Entry x:Name = "Letter1" WidthRequest = "50" MaxLength = "1" Keyboard = "Text"/>
            <Entry x:Name = "Letter2" WidthRequest = "50" MaxLength = "1" Keyboard = "Text"/>
            <Entry x:Name = "Letter3" WidthRequest = "50" MaxLength = "1" Keyboard = "Text"/>
            <Entry x:Name = "Letter4" WidthRequest = "50" MaxLength = "1" Keyboard = "Text"/>
            <Entry x:Name = "Letter5" WidthRequest = "50" MaxLength = "1" Keyboard = "Text"/>
        </StackLayout>
        <Button Text = "Submit Your Guess" Clicked = "OnGuessSubmit" HorizontalOptions = "Center"/>
        <Label x:Name = "FeedbackLabel" FontSize = "20" TextColor = "Red" HorizontalOptions = "Center"/>
    </StackLayout>

</ContentPage>
